<h1>Post Lists</h1>

<% @posts.each do |post| %>
	<div class="post" id="<%= dom_id(post) %>">
		<h2><%= post.title %></h2>
		<p><%= post.body %></p>
		<ul>
			<li><%= link_to "Show", post_path(post) %></li>
			<li><%= link_to "Edit", edit_post_path(post) %></li>
			<li><%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %></li>
		</ul>
		<br class="clear" />
	</div>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
